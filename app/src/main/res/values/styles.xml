<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionBarStyle">@style/IodActionBar</item>
        <item name="android:actionModeBackground">@color/holo_green_mat</item>
        <item name="android:spinnerDropDownItemStyle">@style/customSpinnerItem</item>
        <item name="android:spinnerItemStyle">@style/customSpinnerItem</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- Section header TextView -->
    <style name="sectionHeaderTextView" parent="android:Widget.Holo.Light.TextView">
        <item name="android:drawableBottom">@drawable/section_header_separator</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/holo_green_mat</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="helpHeaderTextView" parent="android:Widget.Holo.Light.TextView">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
    </style>

    <style name="helpContentTextView" parent="android:Widget.Holo.Light.TextView">
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/hint_darker_gray</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Small</item>
    </style>

    <style name="customSpinnerItem" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:textAppearance">@style/customTextAppearanceSpinnerItem</item>
    </style>

    <style name="customTextAppearanceSpinnerItem" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@android:color/tertiary_text_light</item>
    </style>

    <style name="listItemTextViewSecondary" parent="android:Widget.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Small</item>
        <item name="android:textColor">@color/hint_lighter_gray</item>
    </style>

    <style name="listItemTextViewTertiary" parent="@style/listItemTextViewSecondary">
        <item name="android:alpha">0.75</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:textColor">@color/hint_darker_gray</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="IodActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/actionbar_background</item>
        <item name="android:titleTextStyle">@style/IodActionBar.TitleTextStyle</item>
    </style>

    <style name="IodActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>